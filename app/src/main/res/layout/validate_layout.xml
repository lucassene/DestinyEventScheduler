<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/global_padding"
    android:paddingRight="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/event_header_layout"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:text="@string/event_confirmation"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <View
            android:id="@+id/wait_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/subheaderHeight"
            android:id="@+id/section_guardians"
            android:textColor="@color/psnColor"
            android:gravity="center_vertical"
            android:textSize="@dimen/secondaryTextSize"
            android:text="@string/participants_guardians" />

        <FrameLayout
            android:id="@+id/members_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:id="@+id/btn_validar"
            android:layout_marginTop="@dimen/settingsMargin"
            android:text="@string/validate_button"
            android:background="@color/colorButtonNormal"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>