<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/subheaderHeight"
            android:textColor="@color/lineColor"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="@string/application"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/versionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:alpha="0.75"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/subheaderHeight"
            android:textColor="@color/lineColor"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="@string/developers"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/client_side"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lucas"
                android:textSize="13sp"
                android:alpha="0.75"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/server_side"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fernando"
                android:textSize="13sp"
                android:alpha="0.75"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/subheaderHeight"
            android:textColor="@color/lineColor"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="@string/contact"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"/>

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_title"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="13sp"
                android:alpha="0.75"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/subheaderHeight"
            android:textColor="@color/lineColor"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="@string/other"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"/>

        <LinearLayout
            android:id="@+id/patreon_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/patreon"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/support"
                android:textSize="13sp"
                android:alpha="0.75"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/visit_website"
                android:textSize="13sp"
                android:alpha="0.75"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>