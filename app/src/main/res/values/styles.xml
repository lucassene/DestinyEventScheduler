<resources>

    <style name="DestinyApp" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:alertDialogTheme">@style/DestinyApp.AlertDialog</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DestinyApp.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowTitleStyle">@style/DestinyApp.AlertDialog.Title</item>
    </style>

    <style name="DestinyApp.AlertDialog.Title">
        <item name="android:textColor">@color/tabIndicatorColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    
</resources>
