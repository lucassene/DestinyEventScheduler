<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destiny.event.scheduler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="D Event Scheduler"
        android:supportsRtl="true"
        android:theme="@style/DestinyApp">
        <activity
            android:name="com.destiny.event.scheduler.activities.LoginActivity">
        </activity>
        <activity
            android:name="com.destiny.event.scheduler.activities.WebActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name="com.destiny.event.scheduler.activities.DrawerActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name="com.destiny.event.scheduler.activities.PrepareActivity"
            android:noHistory="true">
        </activity>
        
        <provider
            android:authorities="com.destiny.event.scheduler.provider"
            android:name=".provider.DataProvider"
            android:exported="false">
        </provider>

        <service android:name=".services.DestinyService"
            android:exported="false">
        </service>

    </application>

</manifest>
